<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    xmlns:ppv="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_marginLeft="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:padding="16dp"
       android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="T101"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#494949"
            android:layout_height="wrap_content"
            android:id="@+id/txttestID"/>
                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="match_parent"
                    android:text="12-15-2015"
                    android:textColor="#494949"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtdate"/>
                </LinearLayout>
            </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:text="Total Questions :"
            android:textColor="#494949"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtdate43"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="xx"
                android:textColor="#494949"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtTotQuestion"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="Total Questions Answered :"
                android:textColor="#494949"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtdate12"/>
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="10"
                android:textColor="#494949"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuestAns"/>
        </LinearLayout>
        <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:text="Total Questions Un-Answered :"
            android:textColor="#494949"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtdate11"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:text="10"
            android:textColor="#494949"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuestUnAns"/>
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="Total Correct Answer :"
                android:textColor="#494949"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtdatety11"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="10"
                android:textColor="#4caf50"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuestCorrAns"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="Total Wrong Answer :"
                android:textColor="#494949"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtdate1f1"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:text="10"
                android:textColor="#FF0000"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtQuestWronAns"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:paddingTop="5dp"
                android:layout_width="wrap_content"
                android:text="Result"
                android:textColor="#494949"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:id="@+id/txtdate2"/>
        </LinearLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
